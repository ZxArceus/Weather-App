<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloudy"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"


        android:layout_height="match_parent"
        android:background="#80000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <SearchView
        android:id="@+id/searchbtn"
        android:layout_width="310dp"
        android:layout_height="54dp"
        android:layout_marginTop="28dp"

        android:background="@drawable/searchshape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="356dp"
        android:layout_height="238dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/back_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exacttemp">

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/back_shape"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="38dp"
                app:srcCompat="@drawable/humiditicon" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Humidity"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/humidityid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:text="humi val"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/back_shape"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout5"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="38dp"
                app:srcCompat="@drawable/presuureicon" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Air Pressure"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/airpresid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="air val"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/back_shape"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="38dp"
                app:srcCompat="@drawable/windicon" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Wind"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/windspeedid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="windspeed"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/back_shape"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="38dp"
                app:srcCompat="@drawable/tempar" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Feels Like"
                android:textColor="#101010"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feelslikeid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:text="feeltemp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/back_shape"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="38dp"
                app:srcCompat="@drawable/visibilityicon" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Visibility"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/visibilityid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="Temp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="94dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"

            android:background="@drawable/back_shape"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">


            <ImageView

                android:layout_width="match_parent"
                android:layout_height="38dp"
                app:srcCompat="@drawable/uvicon" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="UV"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uvid"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/datetime"
        android:layout_width="202dp"
        android:layout_height="96dp"

        android:layout_marginTop="164dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="2024-11-21        10:50"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weathertype"
        android:layout_width="130dp"
        android:layout_height="37dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="456dp"
        android:autoSizeMaxTextSize="22sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="partly Cloudly"

        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/exacttemp"
        android:layout_width="228dp"
        android:layout_height="166dp"

        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="27.2Â°"
        android:autoSizeMaxTextSize="90sp"
        android:autoSizeMinTextSize="70sp"
        android:autoSizeTextType="uniform"

        android:textColor="@color/white"
        android:textSize="90sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datetime"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/mainloc"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="3dp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Kolkata"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/datetime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.689" />
<!--   lottie animations are not given properly in this project due to some reason-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieanim"
        android:layout_width="123dp"
        android:layout_height="92dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="18dp"
        app:lottie_rawRes="@raw/rainanimation"
        app:layout_constraintBottom_toTopOf="@+id/weathertype"
        app:layout_constraintEnd_toStartOf="@+id/datetime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"

       />


</androidx.constraintlayout.widget.ConstraintLayout>
